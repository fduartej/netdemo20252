@model IEnumerable<netdemo20252.Models.Instrument>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Instrumentos Financieros
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>Resumen
                        </h5>
                        <p class="mb-0">
                            <strong>Total de Instrumentos:</strong> 
                            <span class="badge bg-success fs-6">@Model.Count()</span>
                        </p>
                    </div>
                    
                    <h4 class="mb-3">
                        <i class="fas fa-table me-2"></i>Detalles
                    </h4>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">
                                        <i class="fas fa-tag me-1"></i>Ticker
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-building me-1"></i>Nombre
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-industry me-1"></i>Sector
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-coins me-1"></i>Moneda
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-dollar-sign me-1"></i>Precio Actual
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-chart-bar me-1"></i>Capitalizaci√≥n (USD)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var instrumento in Model)
                                {
                                    <tr>
                                        <td class="fw-bold text-primary">
                                            <a asp-controller="MarketData" asp-action="Details" asp-route-id="@instrumento.Ticker"
                                                class="btn btn-link"> @instrumento.Ticker</a>
                                        </td>
                                        <td>@instrumento.Nombre</td>
                                        <td>
                                            <span class="badge bg-secondary">@instrumento.Sector</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-warning text-dark">@instrumento.Moneda</span>
                                        </td>
                                        <td class="text-end fw-bold text-success">
                                            @instrumento.PrecioActual.ToString("C")
                                        </td>
                                        <td class="text-end fw-bold">
                                            @instrumento.CapitalizacionUSD.ToString("N0")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
